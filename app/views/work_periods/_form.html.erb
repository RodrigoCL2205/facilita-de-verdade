<div class="row justify-content-center m-3">
      <div class="col-12 col-sm-10">
        <div class="form-group">
          <%= simple_form_for (@work_period) do |f| %>

            <div class="row justify-content-between">
                <div class="mb-1 col-4">
                  <%= f.label :start_date, label: "Início do período: ", required: true %>
                  <% if @work_period.start_date.nil?  %> <%# Verifica se possui data de início para preenchimento automático %>
                    <%= f.input :start_date, as: :string, label: false, input_html: { class: "datepicker" } %>
                  <% else %>
                    <%= f.input :start_date, as: :string, label: false, input_html: { class: "datepicker", value: @work_period.start_date.strftime("%d/%m/%Y") } %>
                  <% end %>
                </div>

                <div class="mb-1 col-4">
                  <%= f.label :end_date, label: "Fim do período: ", required: false %>
                  <% if @work_period.end_date.nil? %> <%# Verifica se possui data fim para preenchimento automático %>
                    <%= f.input :end_date, as: :string, label: false, hint: "Deixar em branco para período em atividade", input_html: { class: "datepicker" } %>
                  <% else %>
                    <%= f.input :end_date, as: :string, label: false, hint: "Deixar em branco para período em atividade", input_html: { class: "datepicker", value: @work_period.end_date.strftime("%d/%m/%Y") } %>
                  <% end %>
                </div>

                <div class="mb-1 col-4">
                  <%= f.label :program, label: "Programa: ", required: true %>
                  <%= f.input :program, class:"form-control", label: false, collection: @program_collection, input_html: { type: "text"} %>
                </div>
              </div>

              <div class="d-flex justify-content-center">
                <div class="form-actions">
                <%= f.button :submit, "Confirmar", class: "br-button primary mt-3 mt-sm-0" %>
                <%= link_to 'Voltar', users_show_path(current_user), class: 'br-button secondary mt-3 mt-sm-0 text-decoration-none' %>
              </div>
            </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
