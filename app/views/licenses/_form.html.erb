<div class="row justify-content-center m-3">
      <div class="col-12 col-sm-10">
        <div class="form-group">
          <%= simple_form_for (@license) do |f| %>

            <div class="row justify-content-between">
                <div class="mb-1 col-4">
                  <%= f.label :start_date, label: "Início do período: ", required: true %>
                  <% if @license.start_date.nil? %>
                    <%= f.input :start_date, as: :string, label: false, input_html: { class: "datepicker" } %>
                  <% else %>
                    <%= f.input :start_date, as: :string, label: false, input_html: { class: "datepicker", value: @license.start_date.strftime("%d/%m/%Y") } %>
                  <% end %>
                </div>

                <div class="mb-1 col-4">
                  <%= f.label :end_date, label: "Fim do período: ", required: true %>
                  <% if @license.end_date.nil? %>
                    <%= f.input :end_date, as: :string, label: false, input_html: { class: "datepicker"} %>
                  <% else %>
                    <%= f.input :end_date, as: :string, label: false, input_html: { class: "datepicker", value: @license.end_date.strftime("%d/%m/%Y") } %>
                  <% end %>
                </div>

                <div class="mb-1 col-4">
                  <%= f.label :tipo, label: "Tipo de licença: ", required: false %>
                  <%= f.input :tipo, class:"form-control", label: false, hint: 'Não é obrigatório informar o tipo de licença', collection: @type_collection %>
                </div>
              </div>

              <div class="d-flex justify-content-center">
                <div class="form-actions">
                <%= f.button :submit, "Confirmar", class: "br-button primary mt-3 mt-sm-0" %>
                <%= link_to 'Voltar', users_show_path(current_user), class: 'br-button secondary mt-3 mt-sm-0 text-decoration-none' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
